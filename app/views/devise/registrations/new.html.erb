<div class="form-box">
  <h2 class="sign-up">Sign Up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :username, required: true %>
      <%= f.input :email, required: true, autofocus: true, font: 80 %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: 'Password Confirmation', required: true %>
    </div>

    <div class="form-bottom">
      <div class="form-actions">
        <%= f.button :submit, "Sign Up", class: 'button' %>
      </div>
    </div>
  <% end %>
</div>

<p class="users-sign-up-quote">
  "Education is the most powerful weapon we can use to change the world."   <br>-Nelson Mandela
</p>
