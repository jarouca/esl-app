<p class="message"><%= @message %></p>

<div class="drill-box">
  <p class="drill-sentence">The definition of <strong><%= @word.word %></strong> is:</p>

  <%= form_for [@bank, @word] do |f| %>
    <ul>
      <% @choices.each do |choice| %>
        <li class="drill-choice">
          <%= radio_button_tag(:choice, "#{choice}") %>
          <%= label_tag(:choice, "#{choice}") %>
        </li>
      <% end %>
    </ul>

    <div class="drill-button">
      <%= f.submit "Submit Answer" %>
    </div>
  <% end %>
</div>
